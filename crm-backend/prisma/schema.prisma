generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id          Int      @id @default(autoincrement())
  email       String   @unique // This automatically creates a unique index
  firstName   String?
  lastName    String?
  phone       String?
  companyName String?
  address     String?
  city        String?
  
  // Example of a boolean field
  isActive    Boolean  @default(true)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}